%nav.navbar.navbar-default.navbar-fixed-top
  .container-fluid
    .navbar-header
      %button.btn.navbar-toggle.collapsed{"aria-expanded" => "false", "data-target" => "#collapser", "data-toggle" => "collapse", :type => "button"}
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      %a.navbar-brand{:href => root_path}
        %img{alt: 'StayWoke', src: asset_path('logo.png')}
