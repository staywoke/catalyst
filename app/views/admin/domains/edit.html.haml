.container
  %h1 Update Domain

  = simple_form_for(@domain, url: admin_domain_path(@domain), method: :put) do |form|
    = form.input :name
    %h2 Cities
    = form.collection_check_boxes :cities, City.order([:state, :name]), :id, :full_name, checked: @domain.cities.pluck(:id), item_wrapper_class: 'block'
    = form.button :submit, class: 'btn-primary'
